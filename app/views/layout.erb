<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
  </head>
  <body>
    <nav>
      <% if logged_in? %>
        <a href="/tweets/new">Create Tweet</a>
        <a href="/logout">Log Out</a>
        <h1>Fwitter</h1>
        <h3>Welcome, <%= current_user.username %>!</h3>
      <% else %>
        <a href="/signup">Sign Up</a>
        <a href="/login">Log In</a>
      <% end %>
    </nav>
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
